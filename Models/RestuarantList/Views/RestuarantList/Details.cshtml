@model RestuarantList.Models.Restuarant

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>

    <div class="d-flex justify-content-center">
        <img src="@Model.ImageURL" style="width: 50%"/>
    </div>

    <div class="d-flex justify-content-center">
        <h3>@Model.Address</h3>
    </div>

    <div class="d-flex justify-content-center">
        Dishes:
        <ul>
            @foreach(var item in Model.RestuarantDishes)
            {
                <li>@item.Dish.Name, @item.Dish.price.ToString("N2") ZAR</li>
            }
        </ul>
        </div>
</div>
<div class="d-flex justify-content-center">
    <a class="btn btn-info" asp-action="Index">Back to Restuarant List</a>
</div>