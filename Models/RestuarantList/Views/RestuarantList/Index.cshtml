@model List<RestuarantList.Models.Restuarant>

@{
    ViewData["Title"] = "RestuarantIndex";
}

<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6">
            <div class="d-flex justify-content-center">
                <h4>
                    @item.Name
                </h4>
            </div>
            <div class="d-flex justify-content-center">
                    <img src="@item.ImageURL" style="width:70%"/>
            </div>
            <div class="d-flex justify-content-center">
                @item.Address
            </div>
            <div class="d-flex justify-content-center">
                <a class="btn btn-info" asp-action="Details" asp-route-id= "@item.Id">Details</a>
            </div>
            </div>
            <!--Additional code to display each item goes here-->
        }
    </div>
</div>